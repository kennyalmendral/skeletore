<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Create an account</h1>
    </div>

    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3 mb-4" role="alert">
            <strong class="font-bold">There are error(s) found:</strong>
            
            <div class="block sm:inline">{{ form.errors | default_errors }}</div>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first-name" class="sr-only">First name</label>

          <input type="text" name="customer[first_name]" id="first-name" autocomplete="given-name" class="relative block w-full px-3 py-2 border" placeholder="First name">
        </div>

        <div class="my-2">
          <label for="last-name" class="sr-only">Last name</label>

          <input type="text" name="customer[last_name]" id="last-name" autocomplete="family-name" class="relative block w-full px-3 py-2 border" placeholder="Last name">
        </div>

        <!-- <div class="my-2">
          <label for="birthdate" class="sr-only">Birthdate</label>

          <input type="date" name="customer[note][Birthdate]" id="birthdate" class="relative block w-full px-3 py-2 border">
        </div> -->

        <div class="my-2">
          <label for="email" class="sr-only">Email address</label>

          <input type="email" name="customer[email]" id="email" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="Email address">
        </div>

        <div class="my-2">
          <label for="password" class="sr-only">Password</label>

          <input type="password" name="customer[password]" id="password" autocomplete="new-password" class="relative block w-full px-3 py-2 border" placeholder="Password">
        </div>

        <div>
          <button type="submit" class="relative w-full px-6 py-4 bg-gray-900 text-white hover:bg-gray-700 rounded-sm my-2">Submit</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>