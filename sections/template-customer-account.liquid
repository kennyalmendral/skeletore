<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>

  <div class="block md:flex gap-4">
    {% assign number_of_orders = customer.orders | size %}

    {% if number_of_orders > 0 %}
      <div class="w-full my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-700">Order history</h2>
        
        {% paginate customer.orders by 3 %}
          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            {% for order in customer.orders %}
              <div class="relative">
                <div class="w-full min-80 bg-gray-200 rounded-sm overflow-hidden lg:h-80">
                  {% if order.line_items.first.image %}
                    <img src="{{ order.line_items.first.image | image_url: width: 216, height: 320 }}" alt="{{ article.image.alt }}" width="216" height="320" alt="{{ order.line_items.first.image.alt }}" class="w-full h-full object-center object-cover" loading="lazy">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                  {% endif %}
                </div>

                <div class="mt-4 flex items-start justify-between">
                  <div>
                    <h3><a href="{{ order.customer_url }}" class="text-md text-blue-600 hover:text-blue-900 underline">{{ order.name }}</a></h3>
                    <p class="mt-0 text-sm text-gray-500">{{ order.financial_status_label }}</p>
                  </div>

                  <div class="text-right">
                    <p class="text-sm font-medium text-white bg-gray-700 rounded-full px-3 py-1">{{ order.fulfillment_status_label }}</p>
                    <p class="text-sm text-gray-700">{{ order.total_price | money }}</p>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl text-gray-400 font-medium">You currently don't have any orders.</h2>
      </div>
    {% endif %}

    <div class="w-full md:w-1/4">
      <h2 class="text-xl font-bold text-gray-700 mb-3">Account details</h2>

      {{ customer.default_address | format_address }}

      <a href="{{ routes.account_addresses_url }}" class="text-blue-600 hover:text-blue-900 underline">View addresses</a>
    </div>
  </div>
</div>