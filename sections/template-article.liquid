<article class="py-8" itemscope itemtype="http://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium" itemprop="headline">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_published_date' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_published_date %}
              <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished dateCreated">Posted {{ article.published_at | date: format: 'on_date' }}</time>
            {% endif %}
          </div>
        </div>
      {% when 'article_author' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center" itemscope itemtype="http://schema.org/Person">
            {% if section.settings.enable_author %}
              <small itemprop="author">{{ article.author }}</small>
            {% endif %}
          </div>
        </div>
      {% when 'featured_image' %}
        <div class="max-w-7xl bg-blue-100 rounded-md mx-2 md:mx-auto overflow-hidden my-4" itemprop="image">
          {% if article.image != blank %}
            <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | image_url: width: 1024, height: 768 }}" alt="{{ article.image.alt }}" width="1024" height="768" loading="lazy" />
          {% else %}
            {% assign placeholder_image = 'lifestyle-1' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>
      {% when 'article_content' %}
        <div class="flex items-center justify-center">
          <div class="max-w-4xl px-2" itemprop="articleBody">{{ article.content }}</div>
        </div>
      {% else %}
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
        <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>

        {% paginate article.comments by 2 %}
          {% for comment in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ comment.author }}</span>
              <span class="text-xs text-gray-400">{{ comment.created_at | date: format: 'default' }}</span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}

          <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
    {% endif %}
  </div>

  <div id="comment-form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
        {% if form.errors %}
          <div class="border p-5 mb-6">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500 flex items-center">
                {% render 'icon-failed' %} <span class="text-sm font-medium ml-2">There are error(s) found:</span>
              </div>
            </div>

            <ul class="px-4 mb-3 ml-7 list-disc">
              {% for error in form.errors %}
                <li class="text-red-500"><span class="text-sm">{{ error | capitalize }} {{ form.errors.messages[error] }}</span></li>
              {% endfor %}
            </ul>
          </div>
        {% elsif form.posted_successfully? %}
          <div class="flex flex-row items-center w-full my-3 p-5">
            <div class="text-green-500 flex items-center">
              {% render 'icon-success' %} <span class="text-sm font-medium ml-2">Your comment was posted successfully.</span>
            </div>
          </div>
        {% endif %}

        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label for="comment-author" class="text-gray-700 font-medium uppercase text-xs mb-2 block">Name</label>
            <input type="text" name="comment[author]" id="comment-author" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none" placeholder="John Doe" required>
          </div>

          <div class="px-3 md:w-1/2">
            <label for="comment-email" class="text-gray-700 font-medium uppercase text-xs mb-2 block">Email address</label>
            <input type="email" name="comment[email]" id="comment-email" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none" placeholder="johndoe@gmail.com" required>
          </div>
        </div>

        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="comment-content" class="text-gray-700 font-medium uppercase text-xs mb-2 block">Comment</label>
            <textarea name="comment[body]" id="comment-content" class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border" required></textarea>
          </div>
        </div>

        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input type="submit" class="w-full cursor-pointer px-6 py-4 bg-gray-900 text-white hover:bg-gray-700 rounded-sm" value="Post comment">
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

<script type="application/ld+json">
{
  "@context": "http://schema.org/",
  "@type": "BlogPosting",
  "headline": {{ article.title | json }},
  "articleBody": {{ article.content | strip_html | json }},
  {% if article.excerpt != blank %}
    "description": {{ article.excerpt | strip_html | json }},
  {% endif %}
  {% if article.image %}
    "image": [
      {{ article.image | image_url: "medium" | prepend: "https:" | json }}
    ],
  {% endif %}
  "datePublished": {{ article.published_at | date: format: "default" | json }},
  "dateCreated": {{ article.created_at | date: format: "default" | json }},
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }}
  }
}
</script>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}