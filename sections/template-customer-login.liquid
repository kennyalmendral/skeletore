<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ login_form: true, password_recovery_form: false }">
  <div class="max-w-md w-full space-y-8" x-show="login_form">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>

    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3 mb-4" role="alert">
            <strong class="font-bold">There are error(s) found:</strong>
            
            <div class="block sm:inline">{{ form.errors | default_errors }}</div>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="email" class="sr-only">Email address</label>

          <input type="email" name="customer[email]" id="email" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="Email address">
        </div>

        {% if form.password_needed %}
          <div class="my-2">
            <label for="password" class="sr-only">Password</label>

            <input type="password" name="customer[password]" id="password" autocomplete="current-password" class="relative block w-full px-3 py-2 border" placeholder="Password">
          </div>
        {% endif %}
        
        <div class="my-3 text-sm">
          <a href="#" class="underline text-gray-500 hover:text-gray-900" x-on:click="login_form = false; password_recovery_form = true">Forgot your password?</a>
        </div>

        <div>
          <button type="submit" class="relative w-full px-6 py-4 bg-gray-900 text-white hover:bg-gray-700 rounded-sm my-2">Sign in</button>
        </div>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12" />

      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest</h1>
      </div>

      {% form 'guest_login' %}
        <div>
          <button type="submit" class="relative w-full px-6 py-4 bg-gray-900 text-white hover:bg-gray-700 rounded-sm my-2">Proceed</button>
        </div>
      {% endform %}
    {% endif %}
  </div>

  <div class="max-w-md w-full space-y-8" x-show="password_recovery_form">
    <div>
      <h2 class="text-center text-3xl font-bold mt-6">Recover your account</h2>
    </div>

    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3 mb-4" role="alert">
            <strong class="font-bold">There are error(s) found:</strong>
            
            <div class="block sm:inline">{{ form.errors | default_errors }}</div>
          </div>
        {% endif %}

        <div class="mt-2 mb-3">
          <label for="email" class="sr-only">Email address</label>

          <input type="email" name="email" id="email" autocomplete="email" class="relative block w-full px-3 py-2 border" placeholder="Email address">
        </div>

        <div>
          <button type="submit" class="relative w-full px-6 py-4 bg-gray-900 text-white hover:bg-gray-700 rounded-sm my-2">Submit</button>
        </div>

        <div class="mt-2 text-sm">
          <a href="#" class="underline text-gray-500 hover:text-gray-900" x-on:click="login_form = true; password_recovery_form = false">&larr; Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>