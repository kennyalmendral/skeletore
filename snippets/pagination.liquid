{% if pagination.pages > 1 %}
  <nav class="flex items-center justify-center my-8" role="navigation">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="border border-gray-600 hover:bg-gray-600 text-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">&laquo; Previous</a>
    {% endif %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="border border-gray-600 hover:bg-gray-600 text-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">Next &raquo;</a>
    {% endif %}
  </nav>
{% endif %}