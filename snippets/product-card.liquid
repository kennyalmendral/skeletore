<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-sm rounded-md overflow-hidden">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img src="{{ product.featured_image | image_url: width: 1024, height: 768 }}" alt="{{ article.image.alt }}" width="1024" height="768" alt="{{ product.featured_image.alt }}" class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform" loading="lazy">
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>